{
  "name": "manic-miners-dat",
  "displayName": "Manic Miners DAT File Support",
  "description": "Language support for Manic Miner .dat level files with syntax highlighting, IntelliSense, and hover information",
  "version": "0.3.0",
  "publisher": "Wal33D",
  "author": {
    "name": "Waleed Judah",
    "email": "aquataze@yahoo.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Wal33D/vscode-manic-miners"
  },
  "bugs": {
    "url": "https://github.com/Wal33D/vscode-manic-miners/issues"
  },
  "homepage": "https://github.com/Wal33D/vscode-manic-miners#readme",
  "keywords": [
    "manic",
    "miners",
    "dat",
    "game",
    "level",
    "editor",
    "syntax",
    "highlighting"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "manicminers",
        "aliases": [
          "Manic Miners Dat File",
          "manicminers"
        ],
        "extensions": [
          ".dat"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "manicminers",
        "scopeName": "source.manicminers",
        "path": "./syntaxes/manicminers.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "dat.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "manicMiners.showWelcome",
        "title": "Show Welcome Page",
        "category": "Manic Miners",
        "icon": "$(home)"
      },
      {
        "command": "manicMiners.newFile",
        "title": "Create New Map",
        "category": "Manic Miners",
        "icon": "$(new-file)"
      },
      {
        "command": "manicMiners.showCommands",
        "title": "Show All Commands",
        "category": "Manic Miners",
        "icon": "$(list-unordered)"
      },
      {
        "command": "manicMiners.showMapPreview",
        "title": "Show Map Preview",
        "category": "Manic Miners",
        "icon": "$(map)"
      },
      {
        "command": "manicMiners.insertTemplate",
        "title": "Insert Map Template",
        "category": "Manic Miners",
        "icon": "$(symbol-namespace)"
      },
      {
        "command": "manicMiners.createTemplateFromSelection",
        "title": "Create Template from Selection",
        "category": "Manic Miners",
        "icon": "$(save)"
      },
      {
        "command": "manicMiners.manageTemplates",
        "title": "Manage Custom Templates",
        "category": "Manic Miners",
        "icon": "$(settings-gear)"
      },
      {
        "command": "manicMiners.runValidation",
        "title": "Run Map Validation",
        "category": "Manic Miners",
        "icon": "$(check)"
      },
      {
        "command": "manicMiners.fixCommonIssues",
        "title": "Fix Common Map Issues",
        "category": "Manic Miners",
        "icon": "$(wrench)"
      },
      {
        "command": "manicMiners.showValidationReport",
        "title": "Show Validation Report",
        "category": "Manic Miners",
        "icon": "$(output)"
      },
      {
        "command": "manicMiners.openObjectiveBuilder",
        "title": "Open Objective Builder",
        "category": "Manic Miners",
        "icon": "$(target)"
      },
      {
        "command": "manicMiners.analyzeObjectives",
        "title": "Analyze Objectives",
        "category": "Manic Miners",
        "icon": "$(graph)"
      },
      {
        "command": "manicMiners.generateObjectiveReport",
        "title": "Generate Objective Report",
        "category": "Manic Miners",
        "icon": "$(book)"
      },
      {
        "command": "manicMiners.convertObjectiveFormat",
        "title": "Convert Objective Format",
        "category": "Manic Miners",
        "icon": "$(sync)"
      },
      {
        "command": "manicMiners.undo",
        "title": "Undo Map Edit",
        "category": "Manic Miners",
        "icon": "$(discard)"
      },
      {
        "command": "manicMiners.redo",
        "title": "Redo Map Edit",
        "category": "Manic Miners",
        "icon": "$(redo)"
      },
      {
        "command": "manicMiners.showUndoRedoHistory",
        "title": "Show Edit History",
        "category": "Manic Miners",
        "icon": "$(history)"
      },
      {
        "command": "manicMiners.clearEditHistory",
        "title": "Clear Edit History",
        "category": "Manic Miners",
        "icon": "$(clear-all)"
      },
      {
        "command": "manicMiners.fillAreaEnhanced",
        "title": "Fill Area (with Undo)",
        "category": "Manic Miners"
      },
      {
        "command": "manicMiners.replaceAllEnhanced",
        "title": "Replace All Tiles (with Undo)",
        "category": "Manic Miners"
      },
      {
        "command": "manicMiners.replaceWithTileSetEnhanced",
        "title": "Replace with Tile Set (with Undo)",
        "category": "Manic Miners"
      },
      {
        "command": "manicMiners.insertScriptPattern",
        "title": "Insert Script Pattern",
        "category": "Manic Miners",
        "icon": "$(code)"
      },
      {
        "command": "manicMiners.showScriptPatternDocs",
        "title": "Show Script Pattern Reference",
        "category": "Manic Miners",
        "icon": "$(book)"
      },
      {
        "command": "manicMiners.showSmartSuggestions",
        "title": "Show Smart Tile Suggestions",
        "category": "Manic Miners",
        "icon": "$(lightbulb)"
      },
      {
        "command": "manicMiners.analyzeTilePatterns",
        "title": "Analyze Tile Patterns",
        "category": "Manic Miners",
        "icon": "$(graph)"
      },
      {
        "command": "manicMiners.createVersion",
        "title": "Create Map Version",
        "category": "Manic Miners",
        "icon": "$(save)"
      },
      {
        "command": "manicMiners.showVersionHistory",
        "title": "Show Version History",
        "category": "Manic Miners",
        "icon": "$(history)"
      },
      {
        "command": "manicMiners.compareVersions",
        "title": "Compare Map Versions",
        "category": "Manic Miners",
        "icon": "$(diff)"
      },
      {
        "command": "manicMiners.toggleHighContrast",
        "title": "Toggle High Contrast Mode",
        "category": "Manic Miners",
        "icon": "$(eye)"
      },
      {
        "command": "manicMiners.toggleScreenReader",
        "title": "Toggle Screen Reader Mode",
        "category": "Manic Miners",
        "icon": "$(megaphone)"
      },
      {
        "command": "manicMiners.cycleFontSize",
        "title": "Cycle Font Size",
        "category": "Manic Miners",
        "icon": "$(text-size)"
      },
      {
        "command": "manicMiners.toggleReducedMotion",
        "title": "Toggle Reduced Motion",
        "category": "Manic Miners",
        "icon": "$(screen-normal)"
      },
      {
        "command": "manicMiners.toggleKeyboardNavigation",
        "title": "Toggle Keyboard Navigation",
        "category": "Manic Miners",
        "icon": "$(keyboard)"
      },
      {
        "command": "manicMiners.showAccessibilityOptions",
        "title": "Show Accessibility Options",
        "category": "Manic Miners",
        "icon": "$(accessibility)"
      },
      {
        "command": "manicMiners.announceTileInfo",
        "title": "Announce Tile Information",
        "category": "Manic Miners",
        "icon": "$(info)"
      },
      {
        "command": "manicMiners.readCurrentLine",
        "title": "Read Current Line",
        "category": "Manic Miners",
        "icon": "$(comment)"
      },
      {
        "command": "manicMiners.navigateToNextSection",
        "title": "Navigate to Next Section",
        "category": "Manic Miners",
        "icon": "$(arrow-down)"
      },
      {
        "command": "manicMiners.navigateToPreviousSection",
        "title": "Navigate to Previous Section",
        "category": "Manic Miners",
        "icon": "$(arrow-up)"
      },
      {
        "command": "manicMiners.showHeatMap",
        "title": "Show Heat Map Analysis",
        "category": "Manic Miners",
        "icon": "$(graph-line)"
      },
      {
        "command": "manicMiners.show3DTerrain",
        "title": "Show 3D Terrain Preview",
        "category": "Manic Miners",
        "icon": "$(map-filled)"
      },
      {
        "command": "manicMiners.generateLevel",
        "title": "Generate New Level",
        "category": "Manic Miners",
        "icon": "$(add)"
      },
      {
        "command": "manicMiners.openMapEditor",
        "title": "Open Map Editor",
        "category": "Manic Miners",
        "icon": "$(edit)"
      },
      {
        "command": "manicMiners.switchToTextEditor",
        "title": "Switch to Text Editor",
        "category": "Manic Miners",
        "icon": "$(code)"
      }
    ],
    "hoverProviders": [
      {
        "language": "manicminers"
      }
    ],
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "manicMiners.mapPreview",
          "name": "Map Preview",
          "icon": "$(map)",
          "contextualTitle": "Manic Miners Map Preview"
        },
        {
          "type": "webview",
          "id": "manicMiners.objectiveBuilder",
          "name": "Objective Builder",
          "icon": "$(target)",
          "contextualTitle": "Manic Miners Objective Builder"
        },
        {
          "type": "webview",
          "id": "manicMiners.mapDiff",
          "name": "Version Diff",
          "icon": "$(diff)",
          "contextualTitle": "Manic Miners Version Diff"
        },
        {
          "type": "webview",
          "id": "manicMiners.heatMap",
          "name": "Heat Map",
          "icon": "$(graph-line)",
          "contextualTitle": "Manic Miners Heat Map Analysis"
        },
        {
          "type": "webview",
          "id": "manicMiners.terrain3D",
          "name": "3D Terrain",
          "icon": "$(map-filled)",
          "contextualTitle": "Manic Miners 3D Terrain Preview"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "manicMiners.mapPreview",
        "contents": "Open a .dat file to see the map preview.\n[Open File](command:workbench.action.files.openFile)"
      },
      {
        "view": "manicMiners.objectiveBuilder",
        "contents": "Open a .dat file to build objectives.\n[Open File](command:workbench.action.files.openFile)"
      }
    ],
    "customEditors": [
      {
        "viewType": "manicMiners.mapEditor",
        "displayName": "Map Editor",
        "selector": [
          {
            "filenamePattern": "*.dat"
          }
        ],
        "priority": "option"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .dat",
          "command": "manicMiners.showMapPreview",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .dat",
          "command": "manicMiners.insertTemplate",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .dat",
          "command": "manicMiners.runValidation",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .dat",
          "command": "manicMiners.openObjectiveBuilder",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .dat",
          "command": "manicMiners.openMapEditor",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .dat",
          "command": "manicMiners.generateLevel",
          "group": "1_generate"
        }
      ]
    },
    "keybindings": [
      {
        "command": "manicMiners.undo",
        "key": "ctrl+alt+z",
        "mac": "cmd+alt+z",
        "when": "editorTextFocus && editorLangId == manicminers"
      },
      {
        "command": "manicMiners.redo",
        "key": "ctrl+alt+y",
        "mac": "cmd+alt+y",
        "when": "editorTextFocus && editorLangId == manicminers"
      },
      {
        "command": "manicMiners.showUndoRedoHistory",
        "key": "ctrl+alt+h",
        "mac": "cmd+alt+h",
        "when": "editorTextFocus && editorLangId == manicminers"
      },
      {
        "command": "manicMiners.showAccessibilityOptions",
        "key": "ctrl+alt+a",
        "mac": "cmd+alt+a",
        "when": "editorTextFocus && editorLangId == manicminers"
      },
      {
        "command": "manicMiners.announceTileInfo",
        "key": "ctrl+alt+i",
        "mac": "cmd+alt+i",
        "when": "editorTextFocus && editorLangId == manicminers"
      },
      {
        "command": "manicMiners.readCurrentLine",
        "key": "ctrl+alt+l",
        "mac": "cmd+alt+l",
        "when": "editorTextFocus && editorLangId == manicminers"
      },
      {
        "command": "manicMiners.navigateToNextSection",
        "key": "ctrl+alt+down",
        "mac": "cmd+alt+down",
        "when": "editorTextFocus && editorLangId == manicminers"
      },
      {
        "command": "manicMiners.navigateToPreviousSection",
        "key": "ctrl+alt+up",
        "mac": "cmd+alt+up",
        "when": "editorTextFocus && editorLangId == manicminers"
      }
    ],
    "snippets": [
      {
        "language": "manicminers",
        "path": "./snippets/manicminers.code-snippets"
      }
    ],
    "themes": [
      {
        "label": "Manic Miners Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/manic-miners-dark.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "manicMiners.mapEditor",
        "displayName": "Map Editor",
        "selector": [
          {
            "filenamePattern": "*.dat"
          }
        ],
        "priority": "option"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src scripts --ext ts",
    "lint:fix": "eslint src scripts --ext ts --fix",
    "analyze-maps": "tsx scripts/analyze-maps.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:golden": "tsx src/test/golden/runGoldenTests.ts",
    "test:golden:update": "UPDATE_GOLDENS=true tsx src/test/golden/runGoldenTests.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
